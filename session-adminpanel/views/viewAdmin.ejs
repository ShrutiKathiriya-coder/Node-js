<%- include('header')%>

  <style>
    body {
      background: linear-gradient(to right, #2c3e50, #4ca1af);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card {
      border-radius: 16px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
      overflow-x: auto;
      margin-left: 272px;
    }

    .table thead {
      background-color: #34495e;
      color: white;
    }

    .table tbody tr:nth-child(even) {
      background-color: #f2f2f2;
    }

    .table img {
      height: 60px;
      width: 60px;
      object-fit: cover;
      border-radius: 50%;
    }

    .table td,
    .table th {
      vertical-align: middle;
      white-space: nowrap;
    }

    .action-icons a {
      font-size: 18px;
      margin-right: 10px;
    }
  </style>

  <div class="page-wrapper">
    <div class="page-breadcrumb py-3">
      <div class="row">
        <div class="col-12 d-flex justify-content-between align-items-center">
          <h4 class="page-title text-white">Admin Table</h4>
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
              <li class="breadcrumb-item"><a href="#" class="text-white-50">Home</a></li>
              <li class="breadcrumb-item active text-white" aria-current="page">Admins</li>
            </ol>
          </nav>
        </div>
      </div>
    </div>

    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card p-3">
            <h5 class="card-title mb-3">Admin Records</h5>
            <% if(locals.currentAdmin.email=='shrutiikathiriya@gmail.com' ) { %>

              <table class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Gender</th>
                    <th>Hobby</th>
                    <th>City</th>
                    <th>Description</th>
                    <th>Avatar</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (records.length===0) { %>
                    <tr>
                      <td colspan="11" class="text-center text-danger">No Records Found</td>
                    </tr>
                    <% } else { %>
                      <% records.map(function(data, index) { %>
                        <tr>
                          <td>
                            <%= index + 1 %>
                          </td>
                          <td>
                            <%= data.fname %>
                          </td>
                          <td>
                            <%= data.lname %>
                          </td>
                          <td>
                            <%= data.email %>
                          </td>
                          <td>
                            <%= data.password %>
                          </td>
                          <td>
                            <%= data.gender %>
                          </td>
                          <td>
                            <%= data.hobby %>
                          </td>
                          <td>
                            <%= data.city %>
                          </td>
                          <td>
                            <%= data.desc %>
                          </td>
                          <td><img src="<%= data.image%>" alt="image"></td>
                          <td class="action-icons">
                            <a href="/updateAdmin/<%= data.id %>" title="Edit" style="color: green;">
                              <i class="mdi mdi-border-color">update</i>
                            </a>
                            <a href="/deleteAdmin/<%= data.id %>" title="Delete" style="color: red;">
                              <i class="mdi mdi-delete">delete</i>
                            </a>
                          </td>
                        </tr>


                        <% }); %>
                          <% } %>
                </tbody>

              </table>
              <% }else { %>

                <table class="table">
                  <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">First Name</th>
                      <th scope="col">Last Name</th>
                      <th scope="col">Email</th>
                      <th scope="col">Gender</th>
                      <th scope="col">Hobby</th>
                      <th scope="col">City</th>
                      <th scope="col">Description</th>
                      <th scope="col">Avatar</th>
                    </tr>
                  </thead>
                  <tbody>

                    <% records.map((data, index)=> { %>

                      <tr>
                        <th scope="row">
                          <%= index+1 %>
                        </th>
                        <td>
                          <%= data.fname %>
                        </td>
                        <td>
                          <%= data.lname %>
                        </td>
                        <td>
                          <%= data.email %>
                        </td>
                        <td>
                          <%= data.gender %>
                        </td>
                        <td>
                          <%= data.hobby %>
                        </td>
                        <td>
                          <%= data.city %>
                        </td>
                        <td>
                          <%= data.desc %>
                        </td>
                        <td><img src="<%= data.avatar %>" height="100"></td>
                      </tr>


                      <% }) %>
                  </tbody>
                </table>

                <% }%>

          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('footer')%>