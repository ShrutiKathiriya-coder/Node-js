<%- include('header')%>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
  body {
    margin: 0;
    font-family: 'Segoe UI', sans-serif;
    background-color: #f3f4f6;
  }

  /* Sidebar */
  .sidebar {
    position: fixed;
    top: 0;
    left: 0;
    width: 220px;
    height: 100vh;
    background: linear-gradient(to bottom, #1e3a8a, #2563eb);
    color: white;
    padding-top: 60px;
    z-index: 1000;
  }

  .sidebar a {
    display: block;
    color: #cbd5e1;
    padding: 12px 20px;
    text-decoration: none;
    font-weight: 500;
  }

  .sidebar a:hover {
    background-color: rgba(255, 255, 255, 0.1);
    color: #fff;
  }

  /* Topbar */
  .topbar {
    position: fixed;
    top: 0;
    left: 220px;
    right: 0;
    height: 60px;
    background-color: #1e293b;
    color: white;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 25px;
    z-index: 999;
  }

  /* Main Content */
  .main-content {
    margin-left: 220px;
    padding: 80px 30px 30px 30px;
  }

  /* Card UI */
  .profile-card {
    border-radius: 20px;
    background: linear-gradient(135deg, #6366f1, #3bf6a0);
    color: white;
    padding: 40px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  .profile-card h4 {
    font-weight: 700;
    margin-bottom: 30px;
  }

  .profile-info label {
    font-weight: 600;
    display: block;
    font-size: 14px;
    margin-bottom: 4px;
  }

  .profile-info .value {
    font-size: 16px;
    font-weight: 500;
    margin-bottom: 20px;
  }

  .btn-edit {
    background-color: white;
    color: #3b82f6;
    border: none;
    border-radius: 10px;
    padding: 10px 20px;
    font-weight: 600;
    transition: 0.3s;
  }

  .btn-edit:hover {
    background-color: #e0e7ff;
    color: #1e3a8a;
  }
</style>

<!-- Sidebar -->
<div class="sidebar">
  <h5 class="text-center fw-bold mb-4">Admin Panel</h5>
  <a href="/dashboard">üìä Dashboard</a>
  <a href="/profile">üë§ Profile</a>
  <a href="/changepassword">üîê Change Password</a>
  <a href="/logout">üö™ Logout</a>
</div>

<!-- Topbar -->
<div class="topbar">
  <div><strong>Welcome, <%= currentAdmin.fname %> üëã</strong></div>
  <a href="/logout" class="text-white text-decoration-none">Logout</a>
</div>

<!-- Main Content -->
<div class="main-content">
  <div class="container">
    <div class="profile-card">
      <h4>üë§ Admin Profile Overview</h4>
      <div class="row profile-info">
        <div class="col-md-6">
          <label>First Name</label>
          <div class="value"><%= currentAdmin.fname %></div>
        </div>
        <div class="col-md-6">
          <label>Last Name</label>
          <div class="value"><%= currentAdmin.lname %></div>
        </div>
        <div class="col-md-6">
          <label>Email Address</label>
          <div class="value"><%= currentAdmin.email %></div>
        </div>
        <div class="col-md-6">
          <label>Password</label>
          <div class="value">‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢</div>
        </div>
        <div class="col-md-6">
          <label>Gender</label>
          <div class="value"><%= currentAdmin.gender %></div>
        </div>
        <div class="col-md-6">
          <label>Hobby</label>
          <div class="value"><%= currentAdmin.hobby %></div>
        </div>
        <div class="col-md-6">
          <label>City</label>
          <div class="value"><%= currentAdmin.city %></div>
        </div>
        <div class="col-md-6">
          <label>Description</label>
          <div class="value"><%= currentAdmin.desc %></div>
        </div>
      </div>
      
    </div>
  </div>
</div>

<%- include('footer') %>
