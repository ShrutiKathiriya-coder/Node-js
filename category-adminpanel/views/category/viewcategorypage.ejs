<%- include('../header')%>

<!-- Page Wrapper -->
<!-- <div class="page-wrapper d-flex flex-column justify-content-center align-items-center" style="min-height: 100vh;"> -->

  <!-- Category Table -->
  <div class="container-fluid d-flex justify-content-center mt-4">
    <div class="col-12 col-md-10 col-lg-8">
      <div class="card shadow rounded">
        <div class="card-body">
          <h5 class="card-title text-center mb-3">Category Data</h5>

          <table class="table table-bordered table-hover text-center align-middle">
            <thead class="table-dark">
              <tr>
                <th>#</th>
                <th>Category Title</th>
                <th>Image</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% records.map((data, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= data.c_title %></td>
                    <td>
                      <img src="/<%= data.c_image %>" height="100" alt="Category Image">
                    </td>
                    <td>
                      <a href="/category/editCategoryPage/?id=<%= data.id %>" class="btn btn-success mx-1">Edit</a>
                      <a href="/category/deleteCategory/<%= data.id %>" class="btn btn-danger mx-1">Delete</a>
                    </td>
                  </tr>
                <% }) %>
            </tbody>
          </table>  
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../footer') %>
